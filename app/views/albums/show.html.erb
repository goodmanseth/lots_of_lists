<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @album.title %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @album.artist %>
</p>

<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>


<h2>Reviews</h2>
<% @album.reviews.each do |review| %>
  <p>
    <b>Name:</b>
    <%= review.reviewer %>
  </p>
 
  <p>
    <b>Review:</b>
    <%= review.body %>
  </p>
  <p>
  <%= link_to 'Delete Review', [review.album, review], data: { confirm: 'Are you sure you want to delete this review?'},
               method: :delete %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@album, @album.reviews.build]) do |f| %>
  <div class="field">
    <%= f.label :reviewer, 'Name' %><br />
    <%= f.text_field :reviewer %>
  </div>
  <div class="field">
    <%= f.label :body, 'Review' %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
