<p id="notice"><%= notice %></p>
<div class = "show">
<h2>
  <strong>Title:</strong>
  <%= @album.title %>
</h2>
<p>
  
</p>

<h3>
  <strong>Artist:</strong>
  <%= @album.artist %>
</h3>
<p>
  
</p>

<h4>
  <strong>Description:</strong>
  <%= @album.description %>
</h4>
</div>
<p>
  
</p>

<div class = "reviews">
<h2>Reviews</h2>
<% @album.reviews.each do |review| %>
  <h5>
    <b>Name:</b>
    <%= review.reviewer %>
  </h5>
 
  <h5>
    <b>Review:</b>
    <%= review.body %>
  </h5>
  <p>
  <%= link_to 'Delete Review', [review.album, review], data: { confirm: 'Are you sure you want to delete this review?'},
               method: :delete %>
  </p>
<% end %>
</div>

<p>
  
</p>
<div class="addreviews">
<h2>Add a review:</h2>
<%= form_for([@album, @album.reviews.build]) do |f| %>
  <div class="field">
    <%= f.label :reviewer, 'Name' %><br />
    <%= f.text_field :reviewer %>
  </div>
  <div class="field">
    <%= f.label :body, 'Review' %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
</div>
